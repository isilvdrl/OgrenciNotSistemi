@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLKULUPLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULUP ID</th>
        <th>KULUP ADI</th>
        <th>KULUP KONTENJANI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.KULUPID</td>

                <td>@klp.KULUPAD</td>

                <td>@klp.KULUPKONTENJAN</td>

                <td><a href="/Kulup/Sil/@klp.KULUPID" class="btn btn-danger">Sil</a>

                    <a href="/Kulup/Guncelle/@klp.KULUPID" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kulup/YeniKulup" class="btn btn-success">Yeni Kulup Ekleme</a>