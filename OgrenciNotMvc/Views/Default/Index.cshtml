@using OgrenciNotMvc.Models.EntityFramework 
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
    </tr>
    <tbody>
        @foreach (var drs in Model)
        {
            <tr>
                <td>@drs.DERSID</td>
            
                <td>@drs.DERSAD</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Ekleme</a>