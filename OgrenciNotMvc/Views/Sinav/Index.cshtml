@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLNOTLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>DERS ID</th>
        <th>OGR ID</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.NOTID</td>
                <td>@ogr.DERSID</td>
                <td>@ogr.OGRID</td>
                <td>@ogr.SINAV1</td>
                <td>@ogr.SINAV2</td>
                <td>@ogr.SINAV3</td>
                <td>@ogr.PROJE</td>
                <td>@ogr.ORTALAMA</td>
                <td>@ogr.DURUM</td>
                <td>
                    <a href="/Sinav/Sil/@ogr.NOTID" class="btn btn-warning">Güncelle</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Sinav/YeniSinav" class=" btn btn-success">Not Ekle</a>
